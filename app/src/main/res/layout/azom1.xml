<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/border"
        >
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/choose_your_profile_3"
        android:backgroundTint="#4FFFFFFF"
        android:layout_gravity="center"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="50dp"
              android:background="@drawable/border2">
              <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_icon"
                  android:contentDescription="@string/appbar_scrolling_view_behavior" />
         </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest1_1"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/border2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_icon"
                android:contentDescription="@string/P_P" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest1_2"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/border2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_icon"
                android:contentDescription="@string/Matt" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest1_3"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="30dp"
          android:layout_gravity="center">
                <LinearLayout
            android:layout_width="119dp"
            android:layout_height="10dp"
            android:background="@drawable/line"
            android:layout_gravity="center"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/or_4"
              android:layout_marginStart="11dp"/>

          <LinearLayout
              android:layout_width="119dp"
              android:layout_height="10dp"
              android:background="@drawable/line"
              android:layout_gravity="center"
              android:layout_marginStart="11dp"
              />
                </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_account_8"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"/>
        <LinearLayout
            android:layout_width="176.5dp"
            android:layout_height="5dp"
            android:background="@drawable/line_black"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"/>

    </LinearLayout>





</LinearLayout>